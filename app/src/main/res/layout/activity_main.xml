<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mybrown"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/card_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/card_background"
        android:elevation="5sp"
        android:gravity="center"
        android:text="What is the name of the immediate former United States President?"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:src="@drawable/ic_change_icon" />

    <ImageView
        android:id="@+id/plus_card"
        android:layout_width="51dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="350dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_plus_icon" />

    <TextView
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="129dp"
        android:background="@color/ans1"
        android:minWidth="200dp"
        android:padding="10dp"
        android:text="Bill Clinton"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="91dp"
        android:layout_marginBottom="191dp"
        android:background="@color/ans2"
        android:minWidth="200dp"
        android:padding="10dp"
        android:text="Barack Obama"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="292dp"
        android:background="@color/ans3"
        android:minWidth="200dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:text="Jeff Bezos"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/next_card"
        android:layout_width="54dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/ic_next_icon" />

    <ImageView
        android:id="@+id/delete_card"
        android:layout_width="63dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/ic_delete_icon" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="7dp"
        android:minWidth="100dp"
        android:minHeight="40dp"
        android:padding="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#eeeeee"
        android:textSize="24sp" />

</RelativeLayout>