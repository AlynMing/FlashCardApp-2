<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mybrown"
    tools:context=".AddCardActivity">

    <ImageView
        android:id="@+id/cancel_activity"
        android:layout_width="53dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/ic_cancel_icon" />

    <EditText
        android:id="@+id/question"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:hint="Enter the Question here"/>

    <EditText
        android:id="@+id/answer"
        android:layout_width="366dp"
        android:layout_height="86dp"
        android:layout_below="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="466dp"
        android:hint="Enter the Answer here" />

    <ImageView
        android:id="@+id/save_new_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_save_icon" />
</RelativeLayout>